name: Scheduler Trigger for Non-Default Branch

on:
  schedule:
    - cron: '*/5 * * * *'  # Every 5 minutes

jobs:
  dispatch-to-dev:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Full Scan on `dev` Branch
        run: |
          curl -X POST \
            -H "Accept: application/vnd.github+json" \
            -H "Authorization: Bearer ${{ secrets.GH_PAT }}" \
            https://api.github.com/repos/${{ github.repository }}/actions/workflows/weekly_full_scan.yml/dispatches \
            -d '{"ref":"dev"}'
