tail -n +2 "scanner-report-partial.csv" | awk -F',' -v OFS=',' -v commit_author="${{ env.GITHUB_USERNAME }}" -v target_branch="${{ env.TARGET_BRANCH }}" '
BEGIN { FPAT = "([^,]+)|(\"[^\"]+\")" }
{
  # Replace 4th column (tags) with "Recommended"
  $4 = "\"Recommended\""
  $12 = commit_author
  if (NF < 13) $13 = "N/A"
  $14 = target_branch
  print
}' >> scanner-report.csv
